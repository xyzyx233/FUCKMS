        <Button x:Name="action" Content="手气不错" HorizontalAlignment="Left" Height="31" Margin="10,360,0,0" VerticalAlignment="Top" Width="157" Click="action_Click"/>
        <Button x:Name="button" Content="那是个啥" HorizontalAlignment="Left" Margin="336,360,0,0" VerticalAlignment="Top" Height="31" Click="button_Click_1" Width="86"/>
        <TextBox x:Name="time" HorizontalAlignment="Left" Height="31" Margin="172,360,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="159"/>
    </Grid>
</Page>
